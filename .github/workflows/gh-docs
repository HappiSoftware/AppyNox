name: Deploy Docsify Documentation

on:
  push:
    branches:
      - gh-docs  # This is where you specify your branch

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v2
    - name: Deploy Docsify to GitHub Pages
      uses: tool3/docsify-action@master
      with:
        github_token: ${{ secrets.GITHUB_TOKEN }}
        docs_folder: ./docs/
